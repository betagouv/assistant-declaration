{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "allowImportingTsExtensions": true,
    "moduleResolution": "bundler",
    "paths": {
      "@ad/*": [
        "./*"
      ]
    },
    "typeRoots": [
      "node_modules/@types",
      "./src/@types"
    ],
    "types": [
      "jest",
      "node"
    ],
    "allowJs": true,
    "sourceMap": true,
    "declaration": false,
    "declarationMap": false,
    "inlineSources": false,
    "composite": false,
    "incremental": true,
    "noEmit": true,
    "jsx": "preserve",
    "importHelpers": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      },
      {
        "name": "next"
      }
    ],
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "strictBindCallApply": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".storybook/**/*.ts",
    ".storybook/**/*.tsx",
    ".next/types/**/*.ts",
    "next-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "data",
    "dist",
    ".next",
    ".storybook/node_modules",
    ".storybook/storybook-static"
  ]
}
